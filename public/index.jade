.container
	.row
		each movie in movies
			.col-lg-3.col-md-4.col-sm-6.col-xs-12.movie
				input(type="checkbox" name="#{movie}" id="#{movie}")
				label(for="#{movie}")= movie
#overlay
	#modal.container
		.row
			.col-xs-12
				.panel.panel-default
					.panel-heading
						h1.panel-title#title
					.panel-body
						.row
							.col-xs-4
								img(src="" id="poster")
							.col-xs-8
								.row
									.col-xs-12
										p#details
								.row
									.col-xs-6
										p#date
									.col-xs-6
										p#rating
